package org.example;

declare Person
    name : String
    age : int
    category : String = "unknown"
end

rule "Categorize by Age"
    no-loop
    when
        $person : Person(category == "unknown")
    then
        String cat = $person.getAge() < 18 ? "minor" : 
                     $person.getAge() < 65 ? "adult" : "senior";
        modify($person) { setCategory(cat) }
end